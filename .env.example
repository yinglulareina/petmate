# ============================================
# PetMate Environment Configuration
# ============================================

# ============================================
# OpenAI API Configuration
# ============================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Optional: OpenAI Organization ID
# Only needed if you're part of multiple organizations
# OPENAI_ORG_ID=your_org_id_here

# ============================================
# ðŸ’° COST-SAVING SETTINGS (Important!)
# ============================================

# Mock Mode: Use fake responses during development (no API calls)
# Set to True for development, False for production/demo
USE_MOCK_AI=True

# Enable result caching to avoid duplicate API calls
ENABLE_CACHE=True

# Cache duration in seconds (3600 = 1 hour)
CACHE_DURATION=3600

# ============================================
# Model Configuration (Optimized for Cost)
# ============================================

# Model: gpt-3.5-turbo is the cheapest option
OPENAI_MODEL=gpt-3.5-turbo

# Max tokens: Lower = cheaper
# 150 is usually enough for symptom analysis
OPENAI_MAX_TOKENS=150

# Temperature: Lower = more deterministic and usually shorter responses
# Range: 0.0 (deterministic) to 1.0 (creative)
OPENAI_TEMPERATURE=0.3

# ============================================
# API Settings
# ============================================

# Request timeout in seconds
API_TIMEOUT=10

# Number of retry attempts on failure
API_RETRY_ATTEMPTS=2

# Delay between retries in seconds
API_RETRY_DELAY=1

# ============================================
# Application Settings
# ============================================

# Debug mode: Enable detailed logging
DEBUG_MODE=False

# Log API usage for cost tracking
LOG_API_USAGE=True

# ============================================
# Development vs Production
# ============================================
# Quick toggle between modes:
#
# DEVELOPMENT MODE (no cost):
#   USE_MOCK_AI=True
#   DEBUG_MODE=True
#
# PRODUCTION MODE (uses API):
#   USE_MOCK_AI=False
#   DEBUG_MODE=False
#
# ============================================

# ============================================
# Instructions
# ============================================
# 1. Copy this file: cp .env.example .env
# 2. Replace 'your_openai_api_key_here' with your actual API key
# 3. Keep USE_MOCK_AI=True during development
# 4. Change USE_MOCK_AI=False only when testing real API
# 5. Never commit this file to Git (it's in .gitignore)
# ============================================